  "author": {
    "name": "Maxim Mazurok",
    "email": "maxim@mazurok.com",
    "url": "https://maxim.mazurok.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Maxim-Mazurok/array-ts.git"
  },
  "homepage": "https://github.com/Maxim-Mazurok/array-ts#readme",
  "type": "module",
  "main": "dist/index.js",
  "types": "types/index.d.ts",
  "scripts": {
    "prepare": "npm run build",
    "pretest-types": "npm run prepare",
    "test-types": "tsd --files **/*.test-d.ts",
